.center-header {
  text-align: center;
}

#game-container, #category-container {
  width: 80%;
  margin: 0 auto;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
}

.game-card, .category-card {
  width: 350px;
  flex: none;
  border: 1px solid grey;
  margin: 10px;
  border-radius: 10px;
  background-color: lightgrey;
}

.game-card:hover, .category-card:hover {
  opacity: 0.8;
}

.game-card h4 {
  text-align: center;
}

.game-image, .category-image {
  max-width: 70%;
  min-height: 150px;
  margin: 0 auto;
}

.game-image img, .category-image img {
  display: block;
  margin: 0 auto;
  margin-bottom: 10px
}

.image-action form {
  margin: 10px auto;
  text-align: center;
}

.game-details, .comments {
  width: 50%;
  margin: 0 auto;
}

.comment-count {
  text-align: center;
}
