#margin {
  margin-top: 40px;
}

.flex {
  display: flex;
  align-items: flex-start;
}

#nav-title {
  width: 60%;
}

#nav-links {
  width: 40%;
}

nav {
  list-style-type: none;
  padding: 0px 20px
}

nav li {
  display: inline;
}

nav h3  {
  display: inline-block;
}

.jumbotron {
  height: 500px;
  width: 100%;
  background-image: url(<%= asset_path 'settlers_background.png' %>);
}

#heading {
  font-size: 8em;
}

#welcome-text {
  color: white;
  text-align: center;
}

.row {
  padding: 0 5%;
}

#left-box, #right-box {
  margin: 0 auto;
  height: 100px;
  border-radius: 5px;
}

#left-box {
  background-color: #FFD264;
}

#right-box {
  background-color: #C43006;
}

footer {
  margin-top: 50px;
  padding: 10px;
  width: 100%;
  text-align: center;
  bottom: 0;
  background-color: white;
  border-top: 1px solid grey;
}


