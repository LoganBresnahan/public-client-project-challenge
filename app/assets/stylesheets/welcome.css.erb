}

#nav-title {
  width: 75%;
}

#nav-links {
  width: 25%;
}

nav {
  list-style-type: none;
  padding: 0px 20px
}

nav li {
  display: inline;
}

nav h3  {
  display: inline-block;
}

.jumbotron {
  height: 500px;
