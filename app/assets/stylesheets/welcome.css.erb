#margin {
  margin-top: 20px;
}

header > .navbar-default .navbar-nav > li > a:hover, #banner:hover {
  color: #C43006;
}

#banner {
  font-size: 1.5em;
}

.jumbotron {
  height: 500px;
  width: 100%;
  background-image: url(<%= asset_path 'settlers_background.png' %>);
}

#heading {
  font-size: 8em;
  line-height: .9em;
}

#welcome-text {
  color: white;
  text-align: center;
}

.row {
  padding: 0 5%;
  display: flex;
}

#left-box, #right-box {
  margin: 0 auto;
  height: 100px;
  border-radius: 5px;
  width: 49%;
}

#left-box {
  background-color: #FFD264;
}

#right-box {
  background-color: #C43006;
}

footer {
  margin-top: 50px;
  padding: 10px;
  width: 100%;
  text-align: center;
  bottom: 0;
  background-color: #F8F8F8;
  border-top: 1px solid lightgray;
}

footer p {
  padding: 10px;
}


