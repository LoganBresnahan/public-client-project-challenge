<h3>Comments for <%= game.name %></h3>
<ul>
  <% @game.comments.each do |comment| %>
    <li>
      <p><%= comment.content %></p>
      <p>Posted By: <%= comment.commenter.name %></p>
    </li>
    <%= form_for :comment, method: :delete, url: game_comment_path(@game, comment.id), confirm: "Are you sure?" do |f| %>
    <input type='hidden' name='game_id' value="<%= @game.id %>">

    <%= f.button "Delete", class: "btn btn-primary" %>
    <% end %>
  <% end %>

</ul>
