<!DOCTYPE html>
<html>
<head>
  <title>Meeple</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <nav class="navbar-fixed-top navbar-default">
        <%= link_to("meeple", root_path, class: "navbar-brand", id:"banner") %>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
          <%= link_to("All Games", games_path, class: "nav-link") %>
        </li>
        <li class="nav-item">
          <%= link_to("All Categories", categories_path, class: "nav-link") %>
        </li>
        <li class="nav-item">
          <%= link_to("All Users", users_path, class: "nav-link") %>
        </li>
        <%= render '/sessions/login_items' %>
      </ul>
    </nav>
  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <div id="margin">
      <%= yield %>
    </div>
  <footer>
    <p>&copy; Team JTron</p>
  </footer>
</body>
</html>
