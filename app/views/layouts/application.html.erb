<!DOCTYPE html>
<html>
<head>
  <title>Meeple</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <nav class="navbar navbar-default navbar-fixed-top flex">
      <div id="nav-title">
        <h3><%= link_to("meeple", root_path ) %></h3>
      </div>
      <div id="nav-links">
        <ul class="nav nav-tabs">
          <li><%= link_to("All Games", games_path) %></li>
          <li><%= link_to("All Users", users_path) %></li>
          <%= render '/sessions/login_items' %>
        </ul>
      </div>
    </nav>
  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <div id="margin">
      <%= yield %>
    </div>
  <footer>
    <p>&copy; Team JTron</p>
  </footer>
</body>
</html>
