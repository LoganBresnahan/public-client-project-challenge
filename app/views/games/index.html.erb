<h1 class="center-header">All Games!</h1>

<div class="sort-panel">
  <span>Sort by: </span>
  <div class="btn-group" role="group" aria-label="...">
    <button type="button" class="btn btn-default">Highest Rated</button>
    <button type="button" class="btn btn-default">A-Z</button>
    <button type="button" class="btn btn-default">Z-A</button>
  </div>
</div>

<div id="game-container">
  <% @games.each do |game| %>
    <%= render partial: 'games/game_card', locals: {game: game} %>
  <% end %>
</div>
